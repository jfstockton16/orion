# API Credentials

# Kalshi - Uses RSA-PSS signing
# Generate API key at kalshi.com → Settings → API
# You'll receive an API Key ID and a private key file (.pem)
KALSHI_API_KEY=your_kalshi_api_key_id_here
KALSHI_PRIVATE_KEY_PATH=path/to/kalshi_private_key.pem
# OR provide the private key inline (base64 or PEM format):
# KALSHI_PRIVATE_KEY_PEM=-----BEGIN PRIVATE KEY-----...
KALSHI_BASE_URL=https://api.elections.kalshi.com/trade-api/v2

# Polymarket - Uses EIP-712 signing + CLOB API credentials
# 1. Ethereum wallet private key (for order signing)
# 2. API credentials from Polymarket (for CLOB API access)
POLYMARKET_PRIVATE_KEY=your_eth_wallet_private_key_without_0x_prefix
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_API_SECRET=your_polymarket_api_secret_here
POLYMARKET_API_PASSPHRASE=your_polymarket_api_passphrase_here
POLYMARKET_CHAIN_ID=137  # Polygon mainnet (use 80001 for Mumbai testnet)
POLYMARKET_PROXY_URL=https://clob.polymarket.com

# Telegram Alerts (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Database
DATABASE_URL=sqlite:///data/arbitrage.db

# Security
ENCRYPTION_KEY=generate_strong_key_here

# AWS Secrets (production only)
AWS_REGION=us-east-1
AWS_SECRETS_NAME=orion-arbitrage-secrets
